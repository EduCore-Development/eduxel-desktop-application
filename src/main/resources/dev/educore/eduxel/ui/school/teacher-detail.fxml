<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dev.educore.eduxel.ui.school.TeacherDetailController"
            stylesheets="@../main/main-theme.css"
            styleClass="dialog-card">

    <content>
        <ScrollPane fitToWidth="true" prefViewportHeight="400" styleClass="dialog-scroll-pane">
            <content>
                <VBox spacing="12" styleClass="dialog-content">
                    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="dialog-header">
                        <Label text="ðŸ‘¨â€ðŸ«" styleClass="app-avatar-text"/>
                        <VBox spacing="2">
                            <Label text="Lehrer" styleClass="activity-title"/>
                            <Label text="Stammdaten &amp; FÃ¤cher" styleClass="activity-subtitle"/>
                        </VBox>
                    </HBox>

                    <TitledPane text="Basisdaten" expanded="true">
                        <content>
                            <GridPane hgap="10" vgap="8">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="50"/>
                                    <ColumnConstraints percentWidth="50"/>
                                </columnConstraints>
                                <children>
                                    <Label text="Vorname" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtFirstName" promptText="Max" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

                                    <Label text="Nachname" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                    <TextField fx:id="txtLastName" promptText="Mustermann" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                    <Label text="Fach" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtSubject" promptText="Mathematik" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                                </children>
                            </GridPane>
                        </content>
                    </TitledPane>

                    <TitledPane text="Kontakt (optional)" expanded="false">
                        <content>
                            <GridPane hgap="10" vgap="8">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="50"/>
                                    <ColumnConstraints percentWidth="50"/>
                                </columnConstraints>
                                <children>
                                    <Label text="E-Mail" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtEmail" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

                                    <Label text="Telefon" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtPhone" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                </children>
                            </GridPane>
                        </content>
                    </TitledPane>
                </VBox>
            </content>
        </ScrollPane>
    </content>

    <buttonTypes>
        <ButtonType text="Abbrechen" buttonData="CANCEL_CLOSE"/>
        <ButtonType text="Speichern" buttonData="OK_DONE"/>
    </buttonTypes>
</DialogPane>
