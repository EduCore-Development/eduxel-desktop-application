<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.image.Image?>
<DialogPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dev.educore.eduxel.ui.school.ClassDetailController"
            stylesheets="@../main/main-theme.css"
            styleClass="dialog-card">

    <content>
        <ScrollPane fitToWidth="true" prefViewportHeight="400" styleClass="dialog-scroll-pane">
            <content>
                <VBox spacing="12" styleClass="dialog-content">
                    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="dialog-header">
                        <ImageView fitHeight="24" fitWidth="24">
                            <image>
                                <Image url="@logo.png"/>
                            </image>
                        </ImageView>
                        <VBox spacing="2">
                            <Label text="Klasse" styleClass="activity-title"/>
                            <Label text="Stammdaten &amp; Zuordnung" styleClass="activity-subtitle"/>
                        </VBox>
                    </HBox>

                    <TitledPane text="Basisdaten" expanded="true">
                        <content>
                            <GridPane hgap="10" vgap="8">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="50"/>
                                    <ColumnConstraints percentWidth="50"/>
                                </columnConstraints>
                                <children>
                                    <Label text="Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtName" promptText="7a" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

                                    <Label text="Jahrgang" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                    <TextField fx:id="txtGrade" promptText="7" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                    <Label text="Schulart" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtSchoolType" promptText="Realschule, Gymnasium..." GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                                </children>
                            </GridPane>
                        </content>
                    </TitledPane>

                    <TitledPane text="Zuordnung" expanded="true">
                        <content>
                            <GridPane hgap="10" vgap="8">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="50"/>
                                    <ColumnConstraints percentWidth="50"/>
                                </columnConstraints>
                                <children>
                                    <Label text="Klassenlehrer" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <ComboBox fx:id="cbTeacher" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

                                    <Label text="Raum" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtRoom" promptText="101" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                </children>
                            </GridPane>
                        </content>
                    </TitledPane>
                </VBox>
            </content>
        </ScrollPane>
    </content>

    <buttonTypes>
        <ButtonType text="Abbrechen" buttonData="CANCEL_CLOSE"/>
        <ButtonType text="Speichern" buttonData="OK_DONE"/>
    </buttonTypes>
</DialogPane>
